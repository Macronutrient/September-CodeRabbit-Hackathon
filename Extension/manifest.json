{
  "manifest_version": 3,
  "name": "AI Tab Organizer",
  "version": "1.0.0",
  "description": "Uses AI to organize and manage tabs based on importance scores",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Tab Organizer"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
