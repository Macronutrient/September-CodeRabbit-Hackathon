# Copy to .env and fill in

# At least one provider API key is required
# OpenAI (GPT) option:
OPENAI_API_KEY=
# Google Gemini options (either works):
GOOGLE_API_KEY=
# or
GEMINI_API_KEY=

# LLM selection (optional)
# LLM_PROVIDER: auto | openai | google
LLM_PROVIDER=auto
# LLM_MODEL: e.g., gpt-4.1 or gemini-2.5-flash
LLM_MODEL=

# Optional overrides (also available as CLI flags)
EMAIL=
CATEGORY=furniture
POSTING_TITLE=
CONDITION=
PRICE=
CITY=
POSTAL_CODE=
DESCRIPTION=
# comma-separated when using env, space-separated on CLI
IMAGES=
HEADLESS=false
# Highlight overlay for interacted elements (click/focus)
HIGHLIGHT=true

# Timeouts (seconds)
CRAIGS_TIMEOUT_SHORT=120
CRAIGS_TIMEOUT_MED=300
CRAIGS_TIMEOUT_LONG=600
